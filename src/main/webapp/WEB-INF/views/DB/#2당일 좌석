DB TABLE *#1 당일 시간제


-- TABLE 구현 --


-- #1번째 TABLE --
create table todaytotalSeat(
toDate varchar2(14),
startTime varchar2(8),
endTime varchar2(8),
seatNum number(2)
);

-- #2번째 TABLE --
create table showtodaystudyseat(
seatNum number(2),
endTime varchar2(8) null,
primary key(seatNum)
);


